{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "mocha"],  // Don't include "cypress" here
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "cypress.d.ts"  // Ensure custom Cypress type declarations are included
  ],
  "exclude": [
    "node_modules"
  ]
}