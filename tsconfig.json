{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "mocha"],  
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "cypress.d.ts"  
  ],
  "exclude": [
    "node_modules"
  ]
}